<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/subcolor2"
    tools:context=".RowAddActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="237dp"
        android:background="@drawable/rounded_rectangle"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addRow" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:background="@drawable/rounded_rectangle"
        android:text="Submit"
        app:layout_constraintBaseline_toBaselineOf="@+id/addCancel"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/addDateEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addDate"
        app:layout_constraintTop_toBottomOf="@+id/addFullEditText" />

    <EditText
        android:id="@+id/addTitleEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="139dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addFull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="Full Participant"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/addFullEditText"
        app:layout_constraintEnd_toStartOf="@+id/addFullEditText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/addDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="15dp"
        android:text="Date"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/addDateEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addFull" />

    <TextView
        android:id="@+id/addTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="27dp"
        android:text="Title"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/addFull"
        app:layout_constraintEnd_toStartOf="@+id/addTitleEditText"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/addFullEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addFull"
        app:layout_constraintTop_toBottomOf="@+id/addTitleEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>